{
  auto_https off
  debug
}

:80 {
  mercure {
    # Configuration de Mercure
    publisher_jwt_key "!ChangeThisMercureHubJWTSecret!"
    subscriber_jwt_key "!ChangeThisMercureHubJWTSecret!"
